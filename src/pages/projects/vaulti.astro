---
// src/pages/projects/[project].astro
import Layout from "@/layouts/Layout.astro";
import "@/styles/global.css";

import { projects } from "@/data/projects.astro";
const project = projects.find((p) => p.title.toLowerCase().includes("vaulti"));

import StatusBadge from "@/components/ui/StatusBadge.astro";
import ImageCarousel from "@/components/ui/ImageCarousel.astro";
---

<Layout>
  <div>
    <div
      class="px-4 sm:px-6 lg:px-8 relative max-w-3xl mx-auto pt-62 pb-18 flex flex-col justify-center items-center"
    >
      <a href="/" class="flex text-2xl gap-4 place-self-start items-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="48"
          height="23"
          viewBox="0 0 48 23"
          fill="none"
          class="fill-[#2f3033] dark:fill-[#FEFEFE]"
        >
          <path
            d="M0.93934 10.4393C0.353553 11.0251 0.353553 11.9749 0.93934 12.5607L10.4853 22.1066C11.0711 22.6924 12.0208 22.6924 12.6066 22.1066C13.1924 21.5208 13.1924 20.5711 12.6066 19.9853L4.12132 11.5L12.6066 3.01472C13.1924 2.42894 13.1924 1.47919 12.6066 0.893401C12.0208 0.307615 11.0711 0.307615 10.4853 0.893402L0.93934 10.4393ZM48 11.5L48 10L2 10L2 11.5L2 13L48 13L48 11.5Z"
          ></path>
        </svg><p class="text-2xl font-bold">Back</p></a
      >

      <div class="gap-7 flex flex-col mt-10 w-full">
        <div class="w-full flex justify-between items-end">
          <h1 class="text-3xl font-bold">Vaulti ~ Password Manager</h1>

          <div>
            <StatusBadge isDone={project?.isDone} />
          </div>
        </div>

        <p class="text-lg place-self-start">
          Vaulti is a mobile app designed to store and manage passwords securely
          and intuitively. Built with a focus on privacy and user experience, it
          features military-grade encryption and keeps your credentials in your
          device's secure enclave.
        </p>
        <p class="text-lg place-self-start font-bold">Key Features:</p>
        <ul class="list-disc pl-5 text-lg">
          <li>🔐 AES-256 encrypted storage for passwords.</li>
          <li>📱 Intuitive UI</li>
          <li>🛠 Built-in strong password generator.</li>
        </ul>
        <p class="text-lg place-self-start font-bold">
          For more info: <a
            href="https://vaultipage.netlify.app/"
            class="text-blue-500 hover:underline">vaulti page</a>
        </p>

        <div class="flex flex-wrap gap-2 pt-1 content-end items-center">
          <p>Stack:</p>{
            project?.stack.map((tech) => (
              <span class="px-2.5 py-2 bg-zinc-100 dark:bg-zinc-700 border border-zinc-200/30 text- text-xs rounded-md font-medium h-fit transition-all duration-300 ease-in-out hover:scale-105">
                {tech}
              </span>
            ))
          }
        </div>

        <ImageCarousel images={project?.images ?? []} client:load />

        <style>
          .hide-scrollbar::-webkit-scrollbar {
            display: none;
          }
          .hide-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
          }
        </style>
      </div>
    </div>
  </div>
</Layout>
