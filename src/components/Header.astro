  <!-- 
  DARK MODE TOGGLE SYSTEM
  Handles both system preference and user override via localStorage
  Usage:
  1. Add button with onclick="darkMode()" to toggle
  2. Include Tailwind dark: classes in your HTML
-->
  <script is:inline>
    /**
     * INITIAL COLOR SCHEME SETUP
     * Checks for saved user preference or falls back to system preference
     * Runs immediately on page load (IIFE)
     */
    (function initColorScheme() {
      // 1. Check for existing user preference in localStorage
      const userPref = localStorage.getItem("color-scheme");

      // 2. Apply saved preference if exists
      if (userPref === "dark") {
        document.documentElement.classList.add("dark");
      } else if (userPref === "light") {
        document.documentElement.classList.remove("dark");
      }
      // 3. Detect system preference if no user preference saved
      else {
        const systemPrefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;

        if (systemPrefersDark) {
          document.documentElement.classList.add("dark");
          localStorage.setItem("color-scheme", "dark");
        } else {
          document.documentElement.classList.remove("dark");
          localStorage.setItem("color-scheme", "light");
        }
      }
    })();

    /**
     * TOGGLE DARK MODE MANUALLY
     * Switches between light/dark modes and saves preference
     * Triggered by button click
     */
    function darkMode() {
      // 1. Get current preference
      const current = localStorage.getItem("color-scheme");

      // 2. Toggle between states
      if (current === "dark") {
        document.documentElement.classList.remove("dark");
        localStorage.setItem("color-scheme", "light");
      } else {
        document.documentElement.classList.add("dark");
        localStorage.setItem("color-scheme", "dark");
      }
    }
  </script>
  
